<Window
    x:Class="BookingApp.TouristView.TouristsMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookingApp.TouristView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Booking app"
    Width="1200"
    Height="750"
    Background="{StaticResource BackgroundColor}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <DockPanel Margin="5" Background="{StaticResource BackgroundColor}">
        <DockPanel Width="340" DockPanel.Dock="Left">
            <DockPanel Background="{StaticResource BackgroundColor}" />
            <GroupBox Margin="3">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderBrush" Value="DarkGray" />
                        <!--  Postavljanje boje okvira  -->
                        <Setter Property="BorderThickness" Value="0.5" />
                        <!--  Postavljanje debljine okvira  -->
                        <!--  Zaobljavanje ivica okvira  -->
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <TextBlock
                        FontFamily="Roboto"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White">
                        Menu
                    </TextBlock>
                </GroupBox.Header>

                <StackPanel Orientation="Vertical">
                    <StackPanel Margin="0,0,0,40" Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                FontSize="20"
                                Foreground="White"
                                Text="{Binding Tourist.FirstName}" />
                            <TextBlock
                                FontSize="20"
                                Foreground="White"
                                Text="{Binding Tourist.LastName}" />
                            <Button
                                Padding="2"
                                Click="LogoutButtonClick"
                                Content="Logout"
                                FontSize="20">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        BorderBrush="Black"
                                                        BorderThickness="1"
                                                        CornerRadius="10">

                                                        <Border.Background>
                                                            <SolidColorBrush Color="White" />
                                                        </Border.Background>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </StackPanel>
                    </StackPanel>
                    <Button
                        Click="ShowAndSearchToursButtonClick"
                        Content="Show and search tours"
                        Style="{StaticResource MainCardTabs}" />
                    <Button
                        Click="MyToursButtonClick"
                        Content="My tours"
                        Style="{StaticResource MainCardTabs}" />
                    <Button
                        Click="VouchersButtonClick"
                        Content="Vouchers"
                        Style="{StaticResource MainCardTabs}" />
                </StackPanel>
            </GroupBox>
        </DockPanel>
        <DockPanel Margin="5" DockPanel.Dock="Right">
            <Frame x:Name="Paige" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </DockPanel>
</Window>
