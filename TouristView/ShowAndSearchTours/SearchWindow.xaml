<Window
    x:Class="BookingApp.TouristView.SearchWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookingApp.TouristView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Booking app"
    Width="394"
    Height="427"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="26,0,26,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.ColumnSpan="2"
            Style="{StaticResource NasloviProzoraTextBlock}"
            Text="Enter Search Parameters" />

        <StackPanel Grid.Column="0" Margin="0,30,0,0">

            <TextBlock Style="{StaticResource TekstualnaPoljaTextBlock}" Text="City" />
            <TextBlock Style="{StaticResource TekstualnaPoljaTextBlock}" Text="Country" />
            <TextBlock Style="{StaticResource TekstualnaPoljaTextBlock}" Text="Duration" />
            <TextBlock Style="{StaticResource TekstualnaPoljaTextBlock}" Text="Language" />
            <TextBlock Style="{StaticResource TekstualnaPoljaTextBlock}" Text="Tourist number" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="0,30,0,0">
            <TextBox
                Width="120"
                Height="30"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                Text="{Binding Path=SearchParams.LocationDto.City, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <TextBox
                Width="120"
                Height="30"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                Text="{Binding Path=SearchParams.LocationDto.Country, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <TextBox
                Width="120"
                Height="30"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                Text="{Binding Path=SearchParams.Duration, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <TextBox
                Width="120"
                Height="30"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                Text="{Binding Path=SearchParams.Language, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <TextBox
                Width="120"
                Height="30"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                Text="{Binding Path=SearchParams.MaxTouristNumber, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />



        </StackPanel>
        <Button
            Grid.Column="0"
            Click="ConfirmClick"
            Content="Confirm"
            Style="{StaticResource ConfirmButton}" />

        <Button
            Grid.Column="1"
            Click="CancelClick"
            Content="Cancel"
            Style="{StaticResource CancelButton}" />
    </Grid>


</Window>
