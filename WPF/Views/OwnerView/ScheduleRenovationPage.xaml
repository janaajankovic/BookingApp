<Page x:Class="BookingApp.WPF.Views.OwnerView.ScheduleRenovationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:repos="clr-namespace:BookingApp.Repositories"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.Views.OwnerView"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="ScheduleRenovationPage">
    
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <!-- Combo box za izbor nekretnine -->
            <StackPanel Margin="5,0">
                <TextBlock Text="Select Property"/>
                <ComboBox Width="150" ItemsSource="{Binding AllPropertyNames}" SelectedIndex="0"/>
            </StackPanel>

            <!-- Date picker za početak renovacije -->
            <StackPanel Margin="5,0">
                <TextBlock Text="Start Date"/>
                <DatePicker/>
            </StackPanel>

            <!-- Date picker za kraj renovacije -->
            <StackPanel Margin="5,0">
                <TextBlock Text="End Date"/>
                <DatePicker/>
            </StackPanel>
           
            <Button Margin="5,10" Width="150" Height="30" Content="Search" Background="{DynamicResource OwnerButtonColor2}" HorizontalAlignment="Right" VerticalAlignment="Top"/>
           
        </StackPanel>
        
        
    </Grid>
</Page>
