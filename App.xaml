        </Style>

        <Style x:Key="HelpInboxStyle" TargetType="DockPanel">
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="TextBlock.FontSize" Value="20" />
