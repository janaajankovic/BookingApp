<Application
    x:Class="BookingApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BookingApp"
    StartupUri="View/SignInForm.xaml">
    <Application.Resources>




        <!--  STilovi za turistu  -->
        <!--<Style TargetType="Label">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="20" />
        </Style>-->

        <SolidColorBrush x:Key="BackgroundColor" Color="#8c92ac" />
        <SolidColorBrush x:Key="CardColor" Color="LightGray" />
        <SolidColorBrush x:Key="ValidationMessageColor" Color="Red" />

        <Style x:Key="PageSetup" TargetType="Page">
            <Setter Property="Width" Value="820" />
            <Setter Property="Height" Value="700" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style x:Key="TekstualnaPoljaTextBlock" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="0,30,0,0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ConfirmButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Width" Value="auto" />
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Width" Value="auto" />
        </Style>

        <Style
            x:Key="NasloviProzoraTextBlock"
            BasedOn="{StaticResource TekstualnaPoljaTextBlock}"
            TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="MainCardTabs" TargetType="Button">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="{StaticResource CardColor}" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="HelpStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="TextBlock.Text" Value="Help" />
            <Setter Property="TextBlock.Margin" Value="0,0,10,0" />
            <Setter Property="TextBlock.FontSize" Value="20" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Height" Value="50" />
        </Style>

        <!--  Raspored kartica i Field setova  -->
        <Style x:Key="CardView" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Okvir Kartica za prikaz svih tura  -->
        <Style x:Key="OkvirKarticeTura" TargetType="Border">
            <Setter Property="Height" Value="165" />
            <Setter Property="Margin" Value="50,15" />
            <Setter Property="Background" Value="{StaticResource CardColor}" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="20" />
        </Style>

        <!--  Group box za prikaz svih vaucera  -->
        <Style x:Key="GroupVauceri" TargetType="GroupBox">
            <Setter Property="Height" Value="135" />
            <Setter Property="Margin" Value="50,15" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="{StaticResource CardColor}" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>


        <!--  Promjena stila kada mis postavimo GroupBox  -->
        <Style
            x:Key="HoverStil"
            BasedOn="{StaticResource GroupVauceri}"
            TargetType="GroupBox">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="FontSize"
                                    To="24"
                                    Duration="0:0:0.300" />
                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="LightBlue"
                                    Duration="0:0:0.300" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="FontSize"
                                    To="20"
                                    Duration="0:0:0.200" />
                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="LightGray"
                                    Duration="0:0:0.200" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <!--  Promjena stila kada mis postavimo Kartice  -->
        <Style
            x:Key="HoverStilKartice"
            BasedOn="{StaticResource OkvirKarticeTura}"
            TargetType="Border">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>

                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="LightBlue"
                                    Duration="0:0:0.900" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>

                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="LightGray"
                                    Duration="0:0:0.200" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <!--  .  -->
    </Application.Resources>
</Application>
