            <Setter Property="Height" Value="175" />
            <Setter Property="Margin" Value="50,15" />
            <Setter Property="Background" Value="{StaticResource CardColor}" />
            <Setter Property="BorderBrush" Value="{StaticResource BackgroundColor}" />
            <Setter Property="BorderThickness" Value="4" />
            <Setter Property="CornerRadius" Value="15" />
        </Style>

        <!--  Group box za prikaz svih vaucera  -->
        <Style x:Key="GroupVauceri" TargetType="GroupBox">
            <Setter Property="Height" Value="135" />
            <Setter Property="Margin" Value="50,15" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="{StaticResource CardColor}" />
            <Setter Property="BorderBrush" Value="{StaticResource BackgroundColor}" />
            <Setter Property="BorderThickness" Value="4" />
        </Style>


        <!--  Promjena stila kada mis postavimo GroupBox  -->
        <Style
            x:Key="HoverStil"
            BasedOn="{StaticResource GroupVauceri}"
            TargetType="GroupBox">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="FontSize"
                                    To="22"
                                    Duration="0:0:0.300" />
                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="#F59432"
                                    Duration="0:0:0.300" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="FontSize"
                                    To="20"
                                    Duration="0:0:0.200" />
                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="#E6F4F1"
                                    Duration="0:0:0.200" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <!--  Promjena stila kada mis postavimo Kartice  -->
        <Style
            x:Key="HoverStilKartice"
            BasedOn="{StaticResource OkvirKarticeTura}"
            TargetType="Border">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>

                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="#F59432"
                                    Duration="0:0:0.300" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    Storyboard.TargetProperty="(GroupBox.Background).(SolidColorBrush.Color)"
                                    To="#E6F4F1"
                                    Duration="0:0:0.300" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <!--  Dugme help  -->
        <Style x:Key="HoverStilHelp" TargetType="Button">
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Margin" Value="0,0,15,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="{StaticResource PageColor}" />
            <Setter Property="BorderBrush" Value="{StaticResource PageColor}" />
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="FontSize"
                                    To="24"
                                    Duration="0:0:0.300" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="FontSize"
                                    To="20"
                                    Duration="0:0:0.300" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>

