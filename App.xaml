            <Setter Property="Width" Value="auto" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="MinHeight" Value="700" />
            <Setter Property="MinWidth" Value="820" />
            <Setter Property="Background" Value="{StaticResource PageColor}" />
        </Style>

