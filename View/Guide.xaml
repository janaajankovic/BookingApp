<Window x:Class="BookingApp.View.Guide"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        mc:Ignorable="d"
        Title="Guide" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="keyPointsListBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"/>


        <ListBox x:Name="tourListBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"
         DisplayMemberPath="Name" SelectionChanged="tourListBox_SelectionChanged"/>

        <Button Content="Add" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" Click="AddButton_Click"/>

        <Button Content="Start Tour" Click="StartTourButton_Click" Margin="320,10,362,10" Grid.Column="1"/>


        <Button Content="Završi Turu" Click="FinishTourButton_Click" Margin="65,0,613,10" Grid.Column="1"/>

        

    </Grid>
</Window>
