<Page x:Class="BookingApp.View.DenyRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="DenyRequestPage">

    <Grid>
        <TextBlock Text="Explanation (optional)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="CommentTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,10,0" Width="300" Height="100" TextWrapping="Wrap"/>
        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Click="SubmitButton_Click"/>
    </Grid>
</Page>
