<Window
    x:Class="BookingApp.View.TouristView.TouristsMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookingApp.View.TouristView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Booking app"
    Width="1200"
    Height="750"
    MinWidth="1200"
    MinHeight="750"
    Background="{StaticResource BackgroundColor}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <DockPanel Margin="5" Background="{StaticResource BackgroundColor}">
        <DockPanel Width="340" DockPanel.Dock="Left">
            <DockPanel Background="{StaticResource BackgroundColor}" />
            <GroupBox Margin="3">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderBrush" Value="DarkGray" />
                        <!--  Postavljanje boje okvira  -->
                        <Setter Property="BorderThickness" Value="0.5" />
                        <!--  Postavljanje debljine okvira  -->
                        <!--  Zaobljavanje ivica okvira  -->
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <TextBlock
                        FontFamily="Roboto"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White">
                        Menu
                    </TextBlock>
                </GroupBox.Header>

                <StackPanel Orientation="Vertical">
                    <DockPanel Margin="0,0,0,50">
                        <DockPanel
                            Width="40"
                            Height="40"
                            VerticalAlignment="Top"
                            DockPanel.Dock="Right">
                            <Button Click="SettingsButtonClick">
                                <Button.BorderBrush>
                                    <SolidColorBrush Opacity="0" Color="#FF707070" />
                                </Button.BorderBrush>
                                <Button.Background>
                                    <SolidColorBrush Opacity="0" Color="#FFDDDDDD" />
                                </Button.Background>
                                <Button.Content>
                                    <Image
                                        Width="30"
                                        VerticalAlignment="Top"
                                        Source="/Resources/Icons/TouristIcons/settings.png" />

                                </Button.Content>
                            </Button>

                        </DockPanel>

                        <StackPanel Margin="0,0,0,40" Orientation="Horizontal">
                            <StackPanel Margin="0,0,10,0">
                                <Image Width="100" Source="/Resources/Icons/TouristIcons/user.png" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    FontSize="24"
                                    Foreground="White"
                                    Text="{Binding Tourist.FirstName}" />
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="24"
                                    Foreground="White"
                                    Text="{Binding Tourist.LastName}" />
                                <Button
                                    Padding="2"
                                    Click="LogoutButtonClick"
                                    FontSize="24">
                                    <Button.Background>
                                        <SolidColorBrush Color="White" />
                                    </Button.Background>
                                    <Button.BorderBrush>
                                        <SolidColorBrush Opacity="0" />
                                    </Button.BorderBrush>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="30"
                                                Margin="5,0,5,0"
                                                Source="/Resources/Icons/TouristIcons/logout.png" />
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                FontSize="24"
                                                Text="Logout" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                            </StackPanel>


                        </StackPanel>
                    </DockPanel>
                    <Button Click="ShowAndSearchToursButtonClick">
                        <Border>

                            <TextBlock
                                Margin="25,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="26"
                                Text="Show And Search Tours">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="ShowAndSearch">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="FontSize" Value="28" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border.Style>
                                <Style BasedOn="{StaticResource OkvirKarticeMeni}" TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="ShowAndSearch">
                                            <Setter Property="Height" Value="100" />
                                            <Setter Property="CornerRadius" Value="30" />
                                            <Setter Property="Background" Value="{StaticResource SelectedCardColor}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MainCardTabs}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="ShowAndSearch">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Height" Value="105" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>
                    <Button Click="MyToursButtonClick">
                        <Border>

                            <TextBlock
                                Margin="25,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="26"
                                Text="My tours">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="MyTours">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="FontSize" Value="28" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border.Style>
                                <Style BasedOn="{StaticResource OkvirKarticeMeni}" TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="MyTours">
                                            <Setter Property="Height" Value="100" />
                                            <Setter Property="CornerRadius" Value="30" />
                                            <Setter Property="Background" Value="{StaticResource SelectedCardColor}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MainCardTabs}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="MyTours">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Height" Value="105" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>
                    <Button Click="ShowAndSearchToursButtonClick">
                        <Border>

                            <TextBlock
                                Margin="25,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="26"
                                Text="Tour requests">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Request">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="FontSize" Value="28" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border.Style>
                                <Style BasedOn="{StaticResource OkvirKarticeMeni}" TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Request">
                                            <Setter Property="Height" Value="100" />
                                            <Setter Property="CornerRadius" Value="30" />
                                            <Setter Property="Background" Value="{StaticResource SelectedCardColor}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MainCardTabs}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Request">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Height" Value="105" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>
                    <Button Click="ShowAndSearchToursButtonClick">
                        <Border>

                            <TextBlock
                                Margin="25,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="26"
                                Text="Complex tour requests">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Complex">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="FontSize" Value="28" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border.Style>
                                <Style BasedOn="{StaticResource OkvirKarticeMeni}" TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Complex">
                                            <Setter Property="Height" Value="100" />
                                            <Setter Property="CornerRadius" Value="30" />
                                            <Setter Property="Background" Value="{StaticResource SelectedCardColor}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MainCardTabs}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Complex">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Height" Value="105" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>


                    <Button Click="VouchersButtonClick">
                        <Border>

                            <TextBlock
                                Margin="25,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="26"
                                Text="Vouchers">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Vouchers">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="FontSize" Value="28" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border.Style>
                                <Style BasedOn="{StaticResource OkvirKarticeMeni}" TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Vouchers">
                                            <Setter Property="Height" Value="100" />
                                            <Setter Property="CornerRadius" Value="30" />
                                            <Setter Property="Background" Value="{StaticResource SelectedCardColor}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Button.Style>
                            <Style BasedOn="{StaticResource MainCardTabs}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveCard, UpdateSourceTrigger=PropertyChanged}" Value="Vouchers">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Height" Value="105" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>

                </StackPanel>
            </GroupBox>
        </DockPanel>
        <DockPanel Margin="5" DockPanel.Dock="Right">
            <Frame x:Name="Paige" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </DockPanel>
</Window>
